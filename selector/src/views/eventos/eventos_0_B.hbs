<div class="container mt-3">
    <div class="container row">
        <div class="col-8 alert alert-info" role="alert">
            <a href="javascript: history.go(-1)" class="alert-link">COORDENADOR</a>
        </div>
        <div class="col-4 text-right align-middle">
            <strong>RESULTADO</strong>
        </div>
    </div>
</div>



<div class="container">
    <div class="alert alert-secondary" role="alert">
        <a href="javascript: history.go(-1)" class="alert-link">Evento: {{evento.descricao}}</a>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="input-group">
                <input class="form-control" id="busca" type="search" autofocus placeholder="Busca ...">
                <span class="input-group-append">
                    <div class="input-group-text bg-secondary bordered"><i
                            class="fa fa-search bg-secondary text-warning"></i>
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>

{{!-- Table --}}
<div class="container">
    <div class="mt-3 table-wrapper-scroll-y my-custom-scrollbar">
        <table class="table table-bordered table-striped table-sm table-hover mb-0">
            <thead>
                <tr>
                    <th class="align-middle text-center">Classificação</th>
                    <th class="align-middle text-center">Inscrição</th>
                    <th class="align-middle">Nome</th>
                    {{#each quesitos}}
                    <th class="text-center">{{descricao}}</th>
                    {{/each}}
                    <th class="align-middle text-center">Média Geral</th>
                </tr>
            </thead>
            <tbody id="grid">
                {{#each resultados}}
                <tr>

                    <td class="align-middle text-center">{{#fRetIndexP1 @index}}{{/fRetIndexP1}}</td>
                    <td class="align-middle text-center">{{numero}}</td>
                    <td class="align-middle text-left">{{nome}}</td>

                    {{#each medias}}
                    <td class="align-middle text-center">{{#fAjustaDec this ../../evento.nota_decimais}}{{/fAjustaDec}}</td>
                    {{/each}}
                    <td class="align-middle text-center">{{#fAjustaDec score ../evento.score_decimais}}{{/fAjustaDec}}</td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>

{{> script_grid_filter}}

