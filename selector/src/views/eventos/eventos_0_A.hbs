<div class="container mt-3">
    <div class="container">
        <div class="alert alert-info" role="alert">
            <a href="javascript: history.go(-1)" class="alert-link">COORDENADOR</a>
        </div>
    </div>
    <div class="container">
        <div class="alert alert-secondary" role="alert">
            <a href="javascript: history.go(-1)" class="alert-link">Evento: {{evento.descricao}}</a>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="input-group">
                    <input class="form-control" id="busca" type="search" autofocus placeholder="Busca ...">
                    <span class="input-group-append">
                        <div class="input-group-text bg-secondary bordered"><i
                                class="fa fa-search bg-secondary text-warning"></i>
                        </div>
                    </span>
                </div>
            </div>
        </div>
    </div>

    {{!-- Table --}}
    <div class="container">
        <div class="mt-3 table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table table-bordered table-striped table-sm table-hover mb-0">
                <thead>
                    <tr>
                        <th class="text-center">NÃºm</th>
                        <th>Nome</th>
                        {{#each quesitos}}
                        <th class="text-center">{{descricao}}</th>
                        {{/each}}

                    </tr>
                </thead>
                <tbody id="grid">
                    {{#each candidatos}}
                    <tr>
                        <td class="text-center">{{numero}}</td>
                        <td>
                            <a href="javascript:void(0)" class="snf-link1"
                                onclick="abreModal('{{numero}}','{{nome}}', selQuesito.value, [{{notas}}], {{../evento.id}}, {{id}});">{{nome}}</a>
                        </td>

                        {{#each notas}}
                        <td class="text-center">{{this}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div id="spinner" class="d-none container mt-3 text-center">
        <i class="fas fa-sync-alt fa-3x fa-spin"></i>
    </div>


    {{> script_grid_filter}}

    <script>
        function showHide(el) {
            var display = document.getElementById(el).style.display;
            alert(el);
            alert(display);
            if (display == "none")
                document.getElementById(el).style.display = 'block';
            else
                document.getElementById(el).style.display = 'none';
        }


    </script>