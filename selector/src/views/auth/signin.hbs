{{!-- .container.p-4--}}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-light">
                <div class="card-header text-center">
                    <h3><strong>Selector Login</strong></h3>
                </div>
                <img src="/img/logo06.jpg" alt="Logo Selector" class="card-img-top mx-auto m-2 rounded-circle w-50">
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" aria-describedby="emailHelpId"
                                placeholder="Email" required>
                            <small id="emailHelpId" class="form-text text-muted">Informe seu Email</small>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="senha" placeholder="Senha"
                                aria-describedby="senhaHelpId" required minlength="8" maxlength="50">
                            <small id="senhaHelpId" class="text-muted">Informe sua Senha (MÃ­n=8 Max=50)</small>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>