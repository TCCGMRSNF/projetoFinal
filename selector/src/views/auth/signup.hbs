{{!-- .container.p-4--}}
<br><br><br>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3><strong>SignUp</strong></h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" name="email"
                                aria-describedby="emailHelpId" placeholder="Email" required>
                            <small id="emailHelpId" class="form-text text-muted">Informe seu Email</small>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nome" class="form-control" placeholder="Nome"
                                aria-describedby="nomeHelpId" required>
                            <small id="nomeHelpId" class="text-muted">Informe seu Nome</small>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="senha" placeholder="Senha"
                                aria-describedby="senhaHelpId" required minlength="8" maxlength="50">
                            <small id="senhaHelpId" class="text-muted">Informe uma Senha (MÃ­n=8 Max=50)</small>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                SignUp
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>